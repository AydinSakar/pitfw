<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pit Application Project Creation Wizard"
        xmlns:local="clr-namespace:Pit.TemplateDialog"
        Height="280"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid x:Name="LayoutRoot"
          Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid  Background="#F0F0F0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <TextBlock Text="Host the Pit Application in a new or existing Web site in solution"
                       Grid.Row="0"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="10 2 2 2" />
            <ComboBox Grid.Row="1"
                      x:Name="webProj"
                      Width="300"
                      VerticalAlignment="Center"
                      ItemsSource="{Binding WebProjects, Mode=OneTime}"
                      SelectedItem="{Binding SelectedWebProjectName, Mode=TwoWay}"
                      HorizontalAlignment="Left"
                      Margin="40 2 2 2" />
            <TextBlock Grid.Row="2"
                       Width="300"
                       Text="New WebProject Name"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="40 2 2 2" />
            <TextBox Grid.Row="3"
                     Width="300"
                     Text="{Binding WebProjName, Mode=TwoWay}"
                     VerticalAlignment="Center"
                     IsEnabled="{Binding ShouldAddNewWebApp}"
                     HorizontalAlignment="Left"
                     Margin="40 2 2 2" />
            <TextBlock Grid.Row="4"
                       Width="300"
                       VerticalAlignment="Center"
                       Text="New WebProject Type"
                       HorizontalAlignment="Left"
                       Margin="40 2 2 2" />
            <ComboBox Grid.Row="5"
                      Width="300"
                      SelectedItem="{Binding SelectedWebProjectType, Mode=TwoWay}"
                      ItemsSource="{Binding WebProjectTypes, Mode=OneTime}"
                      DisplayMemberPath="Name"
                      IsEnabled="{Binding ShouldAddNewWebApp}"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"
                      Margin="40 2 2 2" />
        </Grid>

        <Button x:Name="CancelButton"
                Content="Cancel"
                Width="75"
                Height="23"
                HorizontalAlignment="Right"
                Margin="0,12,10,10"
                Grid.Row="1" />
        <Button x:Name="OKButton"
                Content="OK"
                Width="75"
                Height="23"
                HorizontalAlignment="Right"
                Margin="0,12,89,10"
                Grid.Row="1" />
    </Grid>
</Window>

